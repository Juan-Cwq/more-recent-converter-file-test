{
  "name": "p2r3-convert",
  "productName": "Convert to it!",
  "author": "PortalRunner",
  "description": "Truly universal browser-based file converter",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "src/electron.cjs",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "cache:build": "bun run buildCache.js public/cache.json --minify",
    "cache:build:dev": "bun run buildCache.js public/cache.json",
    "desktop:build": "next build && bun run cache:build",
    "desktop:preview": "electron .",
    "desktop:start": "bun run desktop:build && bun run desktop:preview",
    "desktop:dist:win": "bun run desktop:build && electron-builder --win --publish never",
    "desktop:dist:mac": "bun run desktop:build && electron-builder --mac --publish never",
    "desktop:dist:linux": "bun run desktop:build && electron-builder --linux --publish never"
  },
  "build": {
    "appId": "com.p2r3.convert",
    "directories": {
      "output": "release"
    },
    "files": [
      ".next/**/*",
      "src/electron.cjs"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/jszip": "^3.4.0",
    "@types/node": "^20",
    "@types/opentype.js": "^1.3.9",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "babel-plugin-react-compiler": "^1.0.0",
    "electron": "^40.6.0",
    "electron-builder": "^26.8.1",
    "puppeteer": "^24.36.0",
    "tailwindcss": "^4",
    "typescript": "~5.9.3"
  },
  "dependencies": {
    "@bjorn3/browser_wasi_shim": "^0.4.2",
    "@ffmpeg/core": "^0.12.10",
    "@ffmpeg/ffmpeg": "^0.12.15",
    "@ffmpeg/util": "^0.12.2",
    "@flo-audio/reflo": "^0.1.2",
    "@imagemagick/magick-wasm": "^0.0.37",
    "@sqlite.org/sqlite-wasm": "^3.51.2-build6",
    "@std/yaml": "npm:@jsr/std__yaml",
    "@stringsync/vexml": "^0.1.8",
    "@toon-format/toon": "^2.1.0",
    "@types/bun": "^1.3.9",
    "@types/meyda": "^5.3.0",
    "@types/pako": "^2.0.4",
    "@types/three": "^0.182.0",
    "bson": "^7.2.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.34.3",
    "imagetracer": "^0.2.2",
    "js-synthesizer": "^1.11.0",
    "jszip": "^3.10.1",
    "meyda": "^5.6.3",
    "mime": "^4.1.0",
    "nbtify": "^2.2.0",
    "next": "16.1.6",
    "opentype.js": "^1.3.4",
    "pako": "^2.1.0",
    "pdftoimg-js": "^0.2.5",
    "pe-library": "^2.0.1",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "svg-pathdata": "^8.0.0",
    "tailwind-merge": "^3.5.0",
    "three": "^0.182.0",
    "three-bvh-csg": "^0.0.17",
    "three-mesh-bvh": "^0.9.8",
    "ts-flp": "^1.0.3",
    "verovio": "^6.0.1",
    "vexflow": "^5.0.0",
    "wavefile": "^11.0.0",
    "woff2-encoder": "^2.0.0"
  }
}
